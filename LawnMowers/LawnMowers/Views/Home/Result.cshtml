@model List<LawnMowers.Models.LawnMowersViewModel>

@{
    ViewBag.Title = "LAWN MOWERS";
}
<div id="result">
    
    @if (!Model.Any())
    {
    <div>
        <h2>There was a problem with your process, be sure to enter a valid sequence.</h2>
        <br>
        <h2>If your problem persists, contact the administrator of the application.</h2>
    </div>
    }
    else
    {
    <div>
        <h2>Your Lawn Mowers are located in:</h2>
        <br>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        X_Position
                    </th>
                    <th>
                        Y_Position
                    </th>
                    <th>
                        Orientation
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var element in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => element.x)
                        </td>
                        <td>
                            @Html.DisplayFor(m => element.y)
                        </td>
                        <td>
                            @Html.DisplayFor(m => element.o)
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
    }
</div>
<br>
<button type="button">@Html.ActionLink("Home", "Index", "Home")</button>